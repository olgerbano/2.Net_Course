<Window x:Class="AccountManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccountManager"
        mc:Ignorable="d"
        Title="AccountManager" Height="350" Width="525" Loaded="MainWindow_Load">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Content="Amount:" Margin="10" />
                <TextBox Width="100" x:Name="AmountTextBox" Margin="10" />
                <Button Content="Deposit" Margin="10" Width="70" Click="Deposit_Button_Click" />
                <Button Content="Withdraw" Margin="10" Width="70" Click="Withdraw_Button_Click" />
                <Button Content="Details" Margin="10" Width="70" Click="Details_Button_Click" />
            </StackPanel>
            <Label Content="Transactions:" Margin="10"/>
            <ListBox Height="100" x:Name="TransactionsListBox" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
